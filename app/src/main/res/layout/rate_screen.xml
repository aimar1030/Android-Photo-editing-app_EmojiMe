<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rate_titlelabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FE5D26">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate_rel"
            android:layout_marginTop="22dp">

            <Button
                android:id="@+id/rate_backbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/byukn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Back"
                android:layout_toRightOf="@+id/rate_backbtn"
                android:textColor="#5870B4"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Rate This App"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/rate_down"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ratedown"/>

        <ImageView
            android:id="@+id/rate_up"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/rate_down"
            android:layout_marginLeft="20dp"
            android:src="@drawable/rateup"/>
    </RelativeLayout>

   <WebView
        android:id="@+id/rate_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</RelativeLayout>
